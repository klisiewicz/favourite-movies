<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.karollisiewicz.cinema">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="pl.karollisiewicz.cinema.app.MovieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="pl.karollisiewicz.cinema.app.movie.MoviesActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="pl.karollisiewicz.cinema.app.movie.MovieDetailsActivity"
            android:parentActivityName="pl.karollisiewicz.cinema.app.movie.MoviesActivity" />

        <provider
            android:name="pl.karollisiewicz.cinema.app.data.source.db.MovieContentProvider"
            android:authorities="pl.karollisiewicz.cinema"
            android:exported="false" />

    </application>
</manifest>